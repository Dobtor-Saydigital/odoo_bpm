<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">

    <t t-name="camunda_connector.bpmn_widget_template">
        <div class="modeler">
            <div class="start_form_variables">
                <t t-if="widget.start_vars != {}">
                    <p>
                        <b>  Please Enter the Showing Lobels of Start Form Variables </b>
                    </p>
                    <t t-foreach="widget.start_vars" t-as="factor">
                        <label t-attf-for="{{factor}}">
                            <span t-esc="factor" />
                    : 
                        </label>
                        <input type="text" class="start_vars_input" t-attf-name="{{factor}}" t-attf-value="{{widget.start_vars[factor]['label']}}" t-attf-disabled="{{ widget.mode == 'readonly'?true:undefined }}" />
                    </t>
                </t>
            </div>
            <div id="canvas"></div>
        </div>
    </t>

    <t t-name="camunda_connector.variables_template">
        <div class="variables_template">
            <t t-foreach="widget.vars" t-as="factor">
                <label t-attf-for="{{widget.vars[factor]}}">
                    <span t-esc="widget.vars[factor].label" />
            : 
                </label>
                <input t-if="widget.vars[factor].type == 'String'" type="text" t-attf-name="{{factor}}" t-attf-value="{{widget.vars[factor].value}}" t-attf-disabled="{{ widget.disabled?true:undefined }}" class="vars_input"/>
                <input t-if="widget.vars[factor].type == 'Integer'" type="number" t-attf-name="{{factor}}" t-attf-value="{{widget.vars[factor].value}}" t-attf-disabled="{{ widget.disabled?true:undefined }}" class="vars_input"/>
                <input t-if="widget.vars[factor].type == 'date'" type="date" t-attf-name="{{factor}}" t-attf-value="{{widget.vars[factor].value}}" t-attf-disabled="{{ widget.disabled?true:undefined }}" class="vars_input" />

                <t t-if="widget.vars[factor].type == 'boolean'">
                    <input t-if="widget.vars[factor].value == 'true'" type="checkbox" t-attf-name="{{factor}}" t-attf-checked="true" t-attf-disabled="{{ widget.disabled?true:undefined }}" class="vars_input" />
                    <input t-if="widget.vars[factor].value == 'false'" type="checkbox" t-attf-name="{{factor}}" t-attf-disabled="{{ widget.disabled?true:undefined }}" class="vars_input" />
                </t>

                <br/>

            </t>
        </div>
    </t>

</templates>
