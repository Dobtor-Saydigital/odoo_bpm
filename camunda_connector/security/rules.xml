<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data noupdate="0">
        <record model="ir.module.category" id="module_category_process_management">
            <field name="name">Process Management</field>
            <field name="description">Helps you handle your process management needs</field>
            <field name="sequence">7</field>
        </record>

        <record id="group_process_task_user" model="res.groups">
            <field name="name">Process Task User</field>
            <field name="category_id" ref="module_category_process_management"/>
        </record>

        <record id="process_task_rule" model="ir.rule">
            <field name="name">process tasks user rule</field>
            <field name="model_id" ref="model_process_task"/>
            <field name="domain_force">['|',('assign_to','=',user.id),'&amp;',('assign_to','=',False),('groups_ids', 'in', user.groups_id.ids)]</field>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(6, 0, [ref('camunda_connector.group_process_task_user')])]"/>
        </record>

        <record id="process_task_rule_erp_manager" model="ir.rule">
            <field name="name">process tasks rule erp manager</field>
            <field name="model_id" ref="model_process_task"/>
            <field eval="False" name="global"/>
            <field name="groups" eval="[(6, 0, [ref('base.group_erp_manager')])]"/>
            <field name="domain_force">[(1,'=',1)]</field>
        </record>

    </data>
</odoo>