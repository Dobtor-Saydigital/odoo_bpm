<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- camunda_connector.process.start form view -->
    <record id="camunda_connector_process_start_view_form" model="ir.ui.view">
        <field name="name">camunda_connector.process.start.view.form</field>
        <field name="model">camunda_connector.process.start</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <field name="definition_id" options="{'no_create':True,'no_open':True}" required="1">
                    </field>
                    <field name="form_start_variables" widget="variables_widget"/>
                </group>
                <footer>
                    <button string='Start' name="start" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- camunda_connector.process.start action window -->
    <record id="camunda_connector_process_start_action" model="ir.actions.act_window">
        <field name="name">Start Process</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">camunda_connector.process.start</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
