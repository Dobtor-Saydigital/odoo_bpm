        <menuitem id="bpm_processes_instances_menu_act" name="Processes Instances" parent="bpm_documents_menu_categ" action="process_instance_action" sequence="2"/>
        
        
        <menuitem id="my_tasks_menu_root" name="My Tasks"/>
